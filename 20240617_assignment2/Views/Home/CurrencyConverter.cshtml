@model ConverterModel

    <div class="container">
        <h1 class="display-4 mb-4">Currency Conversor  <i class="fa-solid fa-coins"></i> </h1><hr />
       
        <form asp-action="CurrencyConverter" method="post">
                 
            <label asp-for="Amount" class="form-label">Amount: </label>
            <input type="text" asp-for="Amount" class="form-control"/>
            <span asp-validation-for="Amount" class="text-danger"></span>

            
            <p class="form-label mt-3">Select the currency conversion: </p>
            <div class="row px-5">
                <div class="form-check col-md">
                    <input type="radio" asp-for="ConversionType" id="CAD" value="CAD" class="form-check-input"/>
                    <label for="CAD" class="form-check-label">to CAD</label>
                </div>
                <div class="form-check col-md">
                    <input type="radio" asp-for="ConversionType" id="AUD" value="AUD" class="form-check-input"/>
                    <label for="AUD" class="form-check-label">to AUD</label>
                </div>
                <span asp-validation-for="ConversionType" class="text-danger"></span>
            </div>

            <p class ="form-label mt-3">Final value: </p>
            <input value="@ViewBag.Converted.ToString("###,##0.00")" readonly class="form-control">
                
            <input type="submit" class="btn btn-primary mt-3"/>
            
        </form>

    </div>